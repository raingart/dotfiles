# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+q kill
bindsym --release $mod+Shift+q exec xkill
bindsym $mod+Escape [class="^.*"] kill

# start dmenu (a program launcher)
bindsym $mod+End exec dmenu_run
# bindsym $mod+End exec --no-startup-id i3-dmenu-desktop --dmenu="dmenu -i -l 20"
