bindsym XF86AudioLowerVolume	exec amixer -q set $volumeSource $volumeStep- unmute
bindsym XF86AudioMute		exec amixer -q set $volumeSource toggle
# bindsym XF86AudioMute		exec ~/.config/i3/scripts/toggle_vol.sh
