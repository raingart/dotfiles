# polybar Depends: jsoncpp

# Start i3bar to display a workspace bar (plus the system information i3status finds out, if available)
bar {
   status_command sleep 6 && py3status -c ~/.config/i3/.pyi3status.conf
   ## output DVI-I-2
   ## tray_output HDMI-0
   position top
   separator_symbol "|"
   strip_workspace_numbers yes
   height 20
   # mode hide #dock|hide|invisible
   # mode invisible #dock|hide|invisible

   colors {
      background $bg
      statusline $bar_text
      separator  $separator

      ##Type			border		background	text
      focused_workspace     	$bg		$bg   		$focused
      active_workspace      	#444444 	#5f676a   	#ffffff
      inactive_workspace    	$bg		$bg   		#2f3640
      urgent_workspace      	#aa0000		#990000		#ffffff
      binding_mode          	#323232 	#32323200 	#ffffff

      # focused_workspace	#008fff		#0093b0		#ffffff
      # focused_workspace     	$client_border	$focused   	#adadad
   }
}
