# CHROMIUM_PATCH=$HOME/bin/thorium-browser_99.0.4803.0-1_amd64/chrome
# CHROMIUM_PATCH=chromium-browser-unstable
CHROMIUM_PATCH=chromium-browser-stable
CHROMIUM_FLAGS_PATCH=$HOME/.config/chromium-flags.conf

if [ -f $CHROMIUM_FLAGS_PATCH ]; then
   CHROMIUM_FLAGS="$(cat $CHROMIUM_FLAGS_PATCH)"
fi

args=("$@")

$CHROMIUM_PATCH "$args" $CHROMIUM_FLAGS
