# RSS News Conky by https://github.com/tr37ion
own_window_class conkypanel
own_window_type desktop
# normal, desktop, dock, panel or override
#avoid flicker
# background no
own_window_argb_visual yes
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_value 0 

double_buffer yes

xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
#~ own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_colour black
double_buffer yes
# Borders
draw_borders no
border_inner_margin 3

# Contour
draw_outline no
draw_shades no
draw_outline no
draw_borders no

# Shades
#draw_shades no
#default_shade_color 000000

# Position
gap_y 2
#~ gap_x 0
gap_x 120
#~ gap_x 130

# Alignment
alignment top_left
# alignment top_middle
#alignment botton_left top_middle

# Interval
update_interval 2

# Colors
default_color FFFFFF
#separator
color1 005391
color2 gray
#speed kb
color3 ccc
color4 gray
#graph kb
color5 5f676a
color6 30B930
color7 1E90FF

# default_color FFFFFF
# color1 005391
# color2 gray
# color3 FFFFFF
# color4 CCCCCC
# color5 2683DF
# color6 30B930
# color7 1E90FF
# color8 1793D1

# to prevent window from moving
use_spacer none
maximum_width 1280
# default_bar_size 505 30
default_bar_size 0 0
xftfont Droid Sans:size=8.7
override_utf8_locale yes
use_xft yes
short_units yes

# enp3s0
# ppp0

TEXT
${if_existing /proc/net/route ppp0} \
${color3}${upspeedf ppp0}KB \
${color5}${voffset -7}${upspeedgraph ppp0 16,30 scale -t} \
${color5}${downspeedgraph ppp0 16,120 scale -t} \
${color3}${voffset 8} ${downspeedf ppp0}KB\
${color1}| \
${color3}${totaldown ppp0} \
${color1}/ \
${color2}${totalup ppp0}\
${else}Network disconnected ${endif}\
# | ${color7}CPU: ${color7}${cpubar cpu0 8,50} \
# ïƒ³${exec amixer get Master -c 0 -M | grep -oE "[[:digit:]]*%"} \
${if_match $memperc > 85} \
| ${color6}RAM: ${color6}${membar 6,100}  \
${color2}${mem}${color5} / \
${color2}$memperc% ${color5} \
${endif} \
\#
${if_existing /proc/net/route ppp0}${voffset -20}${endif}#${color2}${time %a %d %b %H:%M} \#
