# RSS News Conky by https://github.com/tr37ion
own_window_class conkypanel
own_window_type desktop
# normal, desktop, dock, panel or override
#avoid flicker
# background no
background yes
double_buffer yes

xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
#~ own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_colour black
double_buffer yes
# Borders
draw_borders no
border_inner_margin 3

# Contour
draw_outline no
draw_shades no
draw_outline no
draw_borders no

# Shades
#draw_shades no
#default_shade_color 000000

# Position
gap_y 2
#~ gap_x 0
gap_x 120
#~ gap_x 130

# Alignment
alignment top_left
# alignment top_middle
#alignment botton_left top_middle

# Interval
update_interval 2

# Colors
default_color FFFFFF
#separator
color1 005391
color2 gray
#speed kb
color3 ccc
color4 gray
#graph kb
color5 5f676a
color6 30B930
color7 1E90FF

# default_color FFFFFF
# color1 005391
# color2 gray
# color3 FFFFFF
# color4 CCCCCC
# color5 2683DF
# color6 30B930
# color7 1E90FF
# color8 1793D1

# to prevent window from moving
use_spacer none
maximum_width 1280
# default_bar_size 505 30
default_bar_size 0 0
xftfont Droid Sans:size=8.7
override_utf8_locale yes
use_xft yes
short_units yes


